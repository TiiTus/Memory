<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memory.adrhm.memory.MainActivity">

    <TextView
        android:id="@+id/chooseLeveltextView"
        android:layout_width="455dp"
        android:layout_height="117dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="255dp"
        android:fontFamily="sans-serif"
        android:text="@string/chooseLevel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/easyButton"
        android:layout_width="240dp"
        android:layout_height="86dp"
        android:layout_marginTop="169dp"
        android:text="@string/easyButton"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/mediumButton"
        android:layout_width="240dp"
        android:layout_height="86dp"
        android:text="@string/mediumButton"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toBottomOf="@+id/easyButton"
        android:layout_marginBottom="89dp"
        app:layout_constraintBottom_toTopOf="@+id/hardButton" />

    <Button
        android:id="@+id/hardButton"
        android:layout_width="240dp"
        android:layout_height="86dp"
        android:text="@string/hardButton"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="169dp" />



    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />
</android.support.constraint.ConstraintLayout>
